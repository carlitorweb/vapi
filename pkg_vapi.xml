<extension type="package" method="upgrade">
    <name>Vapi package</name>
    <author>carlitorweb</author>
    <creationDate>2022-12-21</creationDate>
    <packagename>vapi</packagename>
    <version>1.1.0</version>
    <url>https://github.com/carlitorweb/vapi</url>
    <packager>carlitorweb</packager>
    <packagerurl>https://github.com/carlitorweb/vapi</packagerurl>
    <copyright>Copyright (c)2022 Carlos Rodriguez / carlitorweb</copyright>
    <license>GNU GPL v3 or later</license>
    <description>Vapi installation package v.1.1.0</description>

    <!-- Block individual extensions to be uninstalled -->
    <blockChildUninstall>true</blockChildUninstall>

    <!-- List of extensions to install -->
    <files folder="packages">
        <!-- Component -->
        <file type="component" id="com_vapi">com_vapi.zip</file>

        <!-- Plugins: webservices -->
        <file type="plugin" id="vapi" group="webservices">plg_webservices_vapi.zip</file>
    </files>

    <changelogurl>https://raw.githubusercontent.com/carlitorweb/vapi/master/changelog.xml</changelogurl>

    <!-- Update servers -->
    <updateservers>
        <server type="extension" priority="1" name="Vapi Extension">https://raw.githubusercontent.com/carlitorweb/vapi/master/updates.xml</server>
    </updateservers>
</extension>